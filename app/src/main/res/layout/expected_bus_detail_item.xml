<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

    >
    <TextView
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:id="@+id/expected_bus_detail_time_to"
        android:text="in 99 min"
        android:padding="8dp"
        />

    <TextView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/expected_bus_detail_route"
        android:text="X999"
        android:padding="8dp"
        />

    <TextView
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:id="@+id/expected_bus_detail_destination"
        android:padding="8dp"
        android:text="Lewisham, Shopping Center"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/expected_bus_detail_expected_time"
        android:padding="8dp"
        android:text="99:99:99"
        />

</LinearLayout>